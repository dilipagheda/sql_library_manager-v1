//  By default, this form will submit to /books/new route and so will create a new book
//  If book.id exists then this form will submit to /book/:id and so will update the book with that id
- 
    let actionPath=`/books/new`;
    if(book && book.id)
        actionPath=`/books/${book.id}`;
form(action=actionPath, method="post")
            p #{title}
            if(errors)
                h2(class="error")   Oooops!
                ul(class="error")
                    each error in errors
                        li  #{error.message}            
            p
                label(for="title") Title
                input(name="title", type="text", id="title", required, value=book.title)
            p
                label(for="author") Author
                input(name="author",type="text",id="author" ,required, value=book.author)
            p
                label(for="genre") Genre
                input(name="genre",type="text",id="genre" , value=book.genre)
            p
                label(for="year") Year
                input(name="year",type="text",id="year", value=book.year)
            div.form-buttons
                input(type="submit",value=title)
                a(class="button",href="/") Cancel
if(book && book.id)
    form(class="delete-form" method="post" ,action=`/books/${book.id}/delete` ,onsubmit="return confirm('Do you really want to delete this book?');")
        button(type="submit") Delete
                
