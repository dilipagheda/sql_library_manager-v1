if books
    table
        thead
            tr
                th  Title
                th  Author
                th  Genre
                th  Year
                th  Actions
        tbody
            each book in books
                tr
                    td  #{book.title}
                    td  #{book.author}
                    td  #{book.genre}
                    td  #{book.year}   
                    td.actions
                        div
                            form(class="delete-form" method="post" ,action=`/books/${book.id}/delete` ,onsubmit="return confirm('Do you really want to delete this book?');")
                                button(type="submit") 
                                    i(class="fas fa-trash-alt")
                            a(href=`/books/${book.id}`)
                                i(class="fas fa-edit")          